<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffff" />
            <gradient android:angle="-90" android:startColor="#ffff" android:endColor="#ffff"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="10dip" android:color="#ffff" />
            <solid android:color="@color/red"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1.5dip" android:color="#ffff" />
            <gradient android:angle="-90" android:startColor="@color/red" android:endColor="@color/red" />
        </shape>
    </item>
</selector>